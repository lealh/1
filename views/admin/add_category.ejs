<%- include('../_layouts/adminheader'); -%>


<div class="section-text-center button-container">
    <h1 class="section-text-center">Add a category</h1>
    <a href="/admin/categories" class="button">Back to all categories</a>
</div>

<div class="container">
    <form method="post" action="/admin/categories/add_category" multipart="urlencoded">
        <div class="form-group">
            <label for="">Category Title</label>
            <input type="text" class="form-control" name="title" value="<%-title-%>" placeholder="Title">
        </div>
        
        <div class="section-text-center button-container">
            <button class="button">Submit</button>
        </div>

    </form>
</div>

<%- include('../_layouts/adminfooter'); -%>